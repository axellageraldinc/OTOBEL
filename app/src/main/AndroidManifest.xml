<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.axellageraldinc.smartalarm">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <!-- Permission to start Alarm on device reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".BackgroundService" />

        <activity android:name=".HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".Receiver.AlarmReceiver">
            <intent-filter>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".TambahAlarmBaru.SettingAlarm" />
        <activity android:name=".ShowAlarm" />

        <!-- Will not be called unless the application explicitly enables it -->
        <receiver
            android:name=".Receiver.DeviceBootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Parent activity name untuk point parent activity nya waktu di klik tombol back navigation -->
        <activity
            android:name=".Menu.MenuSetting"
            android:parentActivityName=".HomeScreen" />
        <activity android:name=".ModifyAlarm" />
        <activity android:name=".TambahAlarmBaru.ModelSettingAlarm" />
        <activity android:name=".ManualAlarm" />
        <activity android:name=".RecyclerViewListAlarm.ListActivity" />
        <activity android:name=".AddManualAlarm" />
        <activity android:name=".ModifyBelManual"></activity>
    </application>

</manifest>