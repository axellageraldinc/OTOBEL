<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.axellageraldinc.smartalarm.About"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:layout_weight="3.2">

        <ImageView
            android:layout_width="225dp"
            app:srcCompat="@drawable/logoooo"
            android:id="@+id/imageView"
            android:layout_weight="1"
            android:layout_height="225dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.example.axellageraldinc.smartalarm.CustomTextViewBold
            android:text="@string/JudulBelAbout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtJudul"
            android:textAlignment="center"
            android:textSize="60sp"
            android:layout_weight="2.5" />

        <com.example.axellageraldinc.smartalarm.CustomTextViewMedium
            android:text="@string/AppVersion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtCredit"
            android:textAlignment="center"
            android:textSize="37.5sp"
            android:layout_weight="2.8" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="25dp"
            android:layout_weight="1.95">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInfo"
                android:textSize="30sp"
                android:text="@string/Info1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/Info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="30sp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
