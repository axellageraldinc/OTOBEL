<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundLayout"
    android:backgroundTint="@color/BackgroundLayout">

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:numbersBackgroundColor="@color/TextColor"
        android:numbersInnerTextColor="@color/TextColor"
        android:numbersTextColor="@color/TextColor"
        android:amPmTextColor="@color/TextColor"
        android:theme="@style/AppTheme"
        android:backgroundTint="@color/TextColor"
        android:timePickerMode="spinner" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/listView"
            android:layout_height="250dp"
            android:scrollbars="vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <Button
            android:text="@string/ButtonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            android:background="@drawable/button_colors"
            android:textColor="@color/BackgroundLayout" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:layout_weight="1"
            android:background="@drawable/button_colors"
            android:textColor="@color/BackgroundLayout"
            android:text="@string/ButtonOK" />
    </LinearLayout>

</LinearLayout>